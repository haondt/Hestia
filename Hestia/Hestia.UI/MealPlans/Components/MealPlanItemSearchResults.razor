@using Hestia.Domain.Models
@using Hestia.UI.Core.Components
@using Hestia.UI.Library.Components.Components
@using Hestia.UI.Library.Components.Element

@code {
    [Parameter]
    public List<(int Id, RecipeModel Recipe)> Recipes { get; set; } = new();

    [Parameter]
    public List<(int Id, IngredientModel Ingredient)> Ingredients { get; set; } = new();

    [Parameter]
    public string? CurrentSearch { get; set; }
}

@foreach(var (id, recipe) in Recipes)
{
    <MealPlanItem Entity="recipe" Id="id"/>
}

@foreach(var (id, ingredient) in Ingredients)
{
    <MealPlanItem Entity="ingredient" Id="id"/>
}
