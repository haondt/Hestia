<nav class="navbar" id="navbar"
    _="on OnNavigate 
        for anchor in .navbar-item in (the first .navbar-start in me)
            if anchor's innerHTML == the event's detail.value
                add .is-active to anchor
            else
                remove .is-active from anchor
            end
        end
        remove .is-active from the first .navbar-burger in me
        remove .is-active from the first .navbar-menu in me
    ">
    <div class="navbar-brand">
        <a href="/" hx-boost="true" hx-target="#page-container" class="navbar-item">
            <p class="subtitle is-3 has-text-primary">HESTIA</p>
        </a>

        <a
            _="on click toggle .is-active on the next .navbar-menu toggle .is-active on me"
            class="navbar-burger">
            <span></span>
            <span></span>
            <span></span>
            <span></span>
        </a>
    </div>

    <div class="navbar-menu">
        <div class="navbar-start">
            <a
                href="/ingredients"
                hx-boost="true"
                hx-target="#page-container"
                class="navbar-item is-tab">Ingredients</a>
            <a
                href="/recipes"
                hx-boost="true"
                hx-target="#page-container"
                class="navbar-item is-tab">Recipes</a>
        </div>
        <div class="navbar-end">
            <a
                href="/settings"
                hx-boost="true"
                hx-target="#page-container"
                class="navbar-item is-tab">Settings</a>
        </div>
    </div>
</nav>