@using Hestia.UI.Core.Services
@inject ILucideIconService LucideIconService

@code {
    [Parameter] public required string Name { get; set; } = string.Empty;
    [Parameter] public string? CssClass { get; set; }
    [Parameter] public string? Style { get; set; }
    [Parameter] public int Size { get; set; } = 16;
}

@((MarkupString)LucideIconService.RenderIcon(Name, Size, CssClass, Style))