@using Hestia.Domain.Models
@using Hestia.Domain.Services
@using Hestia.UI.Core.Components
@using Hestia.UI.FoodLog.Components
@using System.Globalization
@using Hestia.UI.MealPlans.Components

@attribute [RenderPage]
@inject IFoodLogService FoodLogService
@inject IMealPlansService MealPlansService

<div _="on load send OnNavigate(value:'FoodLog') to #navbar then remove me"></div>

@code {
    [Parameter, EditorRequired]
    public required string DateString { get; set; }

    private FoodLogModel _foodLog = default!;
    private DateOnly _date;

    protected override async Task OnInitializedAsync()
    {
        _foodLog = await FoodLogService.GetOrCreateFoodLogAsync(DateString);
        _date = DateOnly.Parse(DateString);
    }

}

<div class="content-container mt-5">
        <div class="page-header is-flex is-flex-direction-row is-justify-content-space-between is-align-items-center">
            <a
                href="/food-logs/food-log/@_date.AddDays(-1).ToString("yyyy-MM-dd")"
                hx-boost="true"
                hx-target="#page-container"
            >
                <LucideIcon CssClass="has-text-primary" Name="chevron-left" Size="40" />
            </a>
            <div class="is-flex is-flex-direction-column">
                <p class="px-6">Food Log</p>
                <hr class="my-1" />
                <p class="pl-6 has-text-grey is-size-6 is-text-align-start is-clickable"
                   _="on click set picker to #date-picker picker.showPicker()">@DateString</p>
                <input 
                    id="date-picker"
                    type="date" 
                    value="@DateString" 
                    style="height:0;visibility:hidden;"
                    hx-get="/food-logs"
                    hx-vals='js:{clientSideDateString: this.value}'
                    hx-target="#page-container"
                    hx-trigger="change"
                    />
            </div>
            <a
                href="/food-logs/food-log/@_date.AddDays(1).ToString("yyyy-MM-dd")"
                hx-boost="true"
                hx-target="#page-container"
            >
                <LucideIcon CssClass="has-text-primary" Name="chevron-right" Size="40" />
            </a>
        </div>
    <div class="is-flex is-flex-direction-row is-fullwidth is-position-relative mb-5">
        <div class="is-fullwidth is-flex-grow-1">
            <div class="tabs is-flex-grow-1">
                <ul
                    _="
                        on setActive
                            halt the event
                            if :active is not null
                                remove .is-active from the :active's parentElement
                                add .is-hidden to :activeBody
                            end

                            set :active to the event's srcElement
                            set :activeBody to #{:active's @@data-body-id}
                            add .is-active to the :active's parentElement
                            send loadData to :activeBody
                            remove .is-hidden from :activeBody
                        end
                    "
                    >
                    <li>
                        <a 
                            _="
                                on load send setActive end
                                on click send setActive end
                            "
                            data-body-id="food-log-editor-panel"
                        >
                            Food Log
                        </a>
                    </li>
                    <li>
                        <a
                            _="on click send setActive end"
                            data-body-id="food-log-insights-panel"
                        >
                            Insights
                        </a>
                    </li>
                    <li>
                        <a
                            _="on click send setActive end"
                            data-body-id="food-log-diff-panel"
                        >
                            Compare Meal Plan
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div id="food-log-editor-panel" class="meal-plan-editor-panel">
        <FoodLogger FoodLog="@_foodLog" DateString="@DateString" />
    </div>
    <div 
        id="food-log-insights-panel"
        hx-trigger="loadData"
        hx-get="/food-logs/insights/@DateString"
        hx-swap="innerHTML"
        class="is-hidden meal-plan-insights-panel"
    >
    </div>
    <div 
        id="food-log-diff-panel"
        hx-trigger="loadData"
        hx-get="/food-logs/diff/@DateString"
        hx-swap="innerHTML"
        class="is-hidden"
    >
    </div>
</div>
